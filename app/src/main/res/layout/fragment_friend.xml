<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.tushar.mc_final.FriendFragment">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >

       <Button
           android:id="@+id/accept_friend"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_alignParentStart="true"
           android:layout_alignParentTop="true"
           android:layout_marginStart="45dp"
           android:layout_marginTop="18dp"
           android:background="@drawable/tick_black"
           android:padding="10dp"
           />

       <Button
           android:id="@+id/search_friend"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_alignTop="@+id/accept_friend"
           android:layout_centerHorizontal="true"
           android:background="@drawable/search"
           android:padding="20dp"
           />

       <Button
           android:id="@+id/send_friend"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_alignParentEnd="true"
           android:layout_alignTop="@+id/search_friend"
           android:layout_marginEnd="45dp"
           android:background="@drawable/plus_black"
           android:padding="20dp"

            />

       <android.support.v7.widget.RecyclerView
           android:layout_width="match_parent"
           android:id="@+id/recyclerView"
           android:layout_height="match_parent"
           android:layout_below="@+id/accept_friend"
           android:layout_marginTop="50dp"
           />

       <TextView
           android:id="@+id/textView"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentStart="true"
           android:layout_below="@+id/accept_friend"
           android:layout_marginStart="12dp"
           android:layout_marginTop="8dp"
           android:text="Accept Requests"
           android:textAlignment="center"
           style="@style/TextViewStyle"
          />

       <TextView
           android:id="@+id/textView2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignTop="@+id/textView"
           android:layout_marginLeft="160dp"
           android:text="Search Friends"
           android:textAlignment="center"
           style="@style/TextViewStyle"
           />

       <TextView
           android:id="@+id/textView4"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentEnd="true"
           android:layout_alignTop="@+id/textView2"
           android:layout_marginEnd="20dp"
           android:text="Add Friends"
           android:textAlignment="center"
           style="@style/TextViewStyle"/>


   </RelativeLayout>




</FrameLayout>
